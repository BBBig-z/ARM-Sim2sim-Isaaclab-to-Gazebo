<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panther_description">
    
    <!-- Gazebo 仿真模式专用 URDF -->
    <!-- 参考可工作版本的文件结构 -->
    
    <!-- 导入 Gazebo URDF（包含虚拟根链接、机器人描述） -->
    <xacro:include filename="$(find arm_description)/urdf/panther_gazebo.urdf.xacro" />
    
    <!-- 导入 Gazebo 专用的 ros2_control 配置 -->
    <xacro:include filename="$(find arm_description)/urdf/panther_gazebo_control.xacro" />

</robot>

